<div class="home-column-surface">
  <%= form_with model: [ @business, @resource ], local: true do |form| %>
      <div class="form-input">
        <%= form.label :name %>
        <%= form.text_field :name, placeholder: "Office space, 12sqm in Brunswick", size: 55 %>
      </div>
      <div class="form-input">
        <%= form.label :description %>
        <%= form.text_area :description, placeholder: "busy northside workspace has a spare side office in it's own 4x3m room with aircon, power, a phone and a desk already installed.", cols: 50, rows: 10 %>
      </div>
      <div class="form-input">
        <%= form.label :picture %>
        <%= form.file_field :picture, accept: 'image/png,image/gif,image/jpeg,image/jpg,image/svg+xml,image/webp' %>
        <%#= form.label "or enter a direct URL of a picture" %>
        <%#= form.text_field :picture, placeholder: "www.toebeans.com.au/my_cat.jpg", size: 55 %>
      </div>
      <%= form.hidden_field :business_id, value: @business.id %>
      <%= form.hidden_field :user_id, value: @user.id %>
      <div class="form-input">
        <%= form.submit %>
      </div>
  <% end %>
</div>