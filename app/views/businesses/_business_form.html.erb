<div class="home-column-surface">
  <%= form_with model: @business, local: true do |form| %>
      <div class="form-input">
        <%= form.label :name %>
        <%= form.text_field :name, placeholder: "Whomst'd've ventures, Pty Ltd.", size: 55 %>
      </div>
      <div class="form-input">
        <%= form.label :url %>
        <%= form.text_field :url, placeholder: "www.toebeans.com.au", size: 55 %>
      </div>
      <div class="form-input">
        <%= form.label :location %>
        <%= form.text_field :location, placeholder: "420 Fake street, Suburbia, VIC, 90210", size: 55 %>
      </div>
      <div class="form-input">
        <%= form.label :description %>
        <%= form.text_area :description, placeholder: "We print fanzines here. And make money.", cols: 50, rows: 10 %>
      </div>
      
      <div class="form-input">
        <%= form.submit %>
      </div>
  <% end %>
</div>