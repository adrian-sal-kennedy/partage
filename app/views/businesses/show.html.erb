<%= render 'shared/navbar' %>
<div class="home-column">
  <% if @business %>
    <%= render partial: 'business_list', locals: {biz: @business} %>
    <% @business.resources.each do |resource| %>
      <%= render partial: 'resources/resource_list', locals: {resource: resource, business: @business, divclass: "home-column-surface"} %>
    <% end %>
  <% end %>
  <div class="home-column-panel">
    <%= link_to "New business", new_business_path, class: "home-column-surface" %>
  </div>
</div>